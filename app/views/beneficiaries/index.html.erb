<p id="notice"><%= notice %></p>

<h1>Beneficiaries</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>School</th>
      <th>Reg no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beneficiaries.each do |beneficiary| %>
      <tr>
        <td><%= beneficiary.name %></td>
        <td><%= Institute.find(beneficiary.institute_id).name %></td>
        <td><%= beneficiary.reg_no %></td>
        <td><%= Busary.where(id: beneficiary.id).count %></td>

      </tr>
    <% end %>
  </tbody>
</table>

<br>
