<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @institute.name %>
</p>

<p>
  <strong>Address:</strong>
  <%= @institute.address %>
</p>

<p>
  <strong>Phone:</strong>
  <%= @institute.phone %>
</p>
<p>
  <strong>Number of Students Under busary</strong>
  <%= Beneficiary.where(institute_id: @institute.id).count %>
</p>
<p>
  <strong>Busaries sent  to school</strong>
  <%= Busary.where(institute_id: @institute.id).count %>
</p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>School</th>
      <th>Reg no</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @beneficiaries.each do |beneficiary| %>
      <tr>
        <td><%= beneficiary.name %></td>
        <td><%= Institute.find(beneficiary.institute_id).name %></td>
        <td><%= beneficiary.reg_no %></td>
        <td><%= Busary.where(beneficiary_id: beneficiary.id).count %>
          <%= link_to 'See Busaries', busaries_path(beneficiary_id: beneficiary.id) %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

